# Database connection (Supabase pooler or local PostgreSQL)
DATABASE_URL="postgres://user:password@host:6543/dbname?sslmode=require&pgbouncer=true"

# Direct database connection (for migrations - bypasses connection pooler)
DIRECT_URL="postgres://user:password@host:5432/dbname?sslmode=require"

# JWT secret for authentication (REQUIRED - app will not start without this)
JWT_SECRET="your-secure-random-secret-here"

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Google OAuth (optional â€” Google login will be disabled if not set)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:4000/api/auth/google/callback"

# Server port
PORT=4000
